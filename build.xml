		    mailhost="${mail.smtp}"
		    mailport="${mail.port}"
		    user="${mail.user}"
		    enableStartTLS="true"
		    password="${mail.passwd}">
		    <message>Hello Morteza,

attached our solution.

Regards,
Arne, Falk, Angel</message>
		    <attachments>
			<fileset dir="${ass.dir}">
			    <include name="*_SchroederOswaldBakardzhiev.pdf" />
